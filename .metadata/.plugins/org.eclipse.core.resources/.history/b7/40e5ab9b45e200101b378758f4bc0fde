/*
 * cli_commands.c - AegisFW Bootloader CLI Command Handler
 * Author: Sande
 */

#include "cli_commands.h"
#include "boot_metadata.h"
#include "uart.h"
#include "app_jump.h"
#include "memory_map.h"
#include "image_crc.h"
#include "image_validate.h"
#include <string.h>
#include "stm32f4xx.h"

/* -------- FLASH ERASE API (Implement inside flash.c later) -------- */
extern void flash_erase_range(uint32_t address, uint32_t size);

/* ---------------- Command helpers ---------------- */

void cmd_help()
{
    uart_puts("\nAvailable Commands:\r\n"
        " help          - List commands\r\n"
        " info          - Show metadata summary\r\n"
        " meta_dump     - Dump full metadata\r\n"
        " boot          - Boot using active slot\r\n"
        " boot_a        - Force boot Slot-A\r\n"
        " boot_b        - Force boot Slot-B\r\n"
        " crc_reset_a   - Clear CRC of Slot-A\r\n"
        " crc_reset_b   - Clear CRC of Slot-B\r\n"
        " switch        - Toggle active slot\r\n"
        " erase_a       - Erase Slot-A flash\r\n"
        " erase_b       - Erase Slot-B flash\r\n"
        " reboot        - Reboot MCU\r\n"
        " update        - Enter firmware update mode (future)\r\n");
}

static void cmd_info(boot_metadata_t *m)
{
    uart_puts("\n[BOOT INFO]\r\n");
    uart_printf(" Active Slot : %c\r\n", (m->active_slot==SLOT_A?'A':'B'));
    uart_printf(" CRC-A       : 0x%08lX\r\n", m->crcA);
    uart_printf(" CRC-B       : 0x%08lX\r\n", m->crcB);
}

static void cmd_boot(boot_metadata_t *m)
{
    uart_puts("Booting active slot...\r\n");
    boot_jump_to_application((m->active_slot==SLOT_A)?APP_SLOT_A_BASE:APP_SLOT_B_BASE);
}

static void cmd_boot_a()
{
    uart_puts("Force boot Slot-A\r\n");
    boot_jump_to_application(APP_SLOT_A_BASE);
}

static void cmd_boot_b()
{
    uart_puts("Force boot Slot-B\r\n");
    boot_jump_to_application(APP_SLOT_B_BASE);
}

static void cmd_crc_reset_a(boot_metadata_t *m)
{
    m->crcA = 0;
    boot_metadata_store_safe(m);
    uart_puts("CRC-A cleared - new image will enroll on next valid boot\r\n");
}

static void cmd_crc_reset_b(boot_metadata_t *m)
{
    m->crcB = 0;
    boot_metadata_store_safe(m);
    uart_puts("CRC-B cleared - new image will enroll on next valid boot\r\n");
}

static void cmd_switch(boot_metadata_t *m)
{
    m->active_slot = (m->active_slot==SLOT_A)?SLOT_B:SLOT_A;
    boot_metadata_store_safe(m);
    uart_printf("Active slot switched to %c\r\n", m->active_slot==SLOT_A?'A':'B');
}

static void cmd_meta_dump(boot_metadata_t *m)
{
    boot_metadata_dump(m);
}

static void cmd_erase_a()
{
    uart_puts("Erasing Slot-A...\r\n");
    flash_erase_range(APP_SLOT_A_BASE, APP_SLOT_SIZE_BYTES);
}

static void cmd_erase_b()
{
    uart_puts("Erasing Slot-B...\r\n");
    flash_erase_range(APP_SLOT_B_BASE, APP_SLOT_SIZE_BYTES);
}

static void cmd_reboot()
{
    uart_puts("Rebooting...\r\n");
    NVIC_SystemReset();
}

static void cmd_update()
{
    uart_puts("Entering update mode... (Handler in Day-9)\r\n");
    // uart_fw_update_handler();
}

/* Main Parser */
void cli_commands(const char *cmd, boot_metadata_t *meta)
{
    if(strcmp(cmd,"help")==0)              return cmd_help();
    if(strcmp(cmd,"info")==0)              return cmd_info(meta);
    if(strcmp(cmd,"meta_dump")==0)         return cmd_meta_dump(meta);
    if(strcmp(cmd,"boot")==0)              return cmd_boot(meta);
    if(strcmp(cmd,"boot_a")==0)            return cmd_boot_a();
    if(strcmp(cmd,"boot_b")==0)            return cmd_boot_b();
    if(strcmp(cmd,"crc_reset_a")==0)       return cmd_crc_reset_a(meta);
    if(strcmp(cmd,"crc_reset_b")==0)       return cmd_crc_reset_b(meta);
    if(strcmp(cmd,"switch")==0)            return cmd_switch(meta);
    if(strcmp(cmd,"erase_a")==0)           return cmd_erase_a();
    if(strcmp(cmd,"erase_b")==0)           return cmd_erase_b();
    if(strcmp(cmd,"reboot")==0)            return cmd_reboot();
    if(strcmp(cmd,"update")==0)            return cmd_update();

    uart_puts("Unknown command. Type 'help'\r\n");
}
