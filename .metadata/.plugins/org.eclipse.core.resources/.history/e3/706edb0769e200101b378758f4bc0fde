/* application/rtos/tasks_health.c */

#include "FreeRTOS.h"
#include "task.h"
#include "uart_driver.h"
#include "gpio_driver.h"

void task_health(void *p)
{
    uart_send_str("[HEALTH] Task Started\r\n");

    while(1)
    {
        gpio_led_toggle();
        uart_send_str("[HEALTH] alive\r\n");

        vTaskDelay(pdMS_TO_TICKS(1000));
    }
}


