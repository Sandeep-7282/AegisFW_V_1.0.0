#include "timer2.h"
#include "uart_threadsafe.h"

void Start_Peripherals_Task(void *arg)
{
    vTaskDelay(pdMS_TO_TICKS(500));  // allow system setup first

    tim2_init(10);   // now safe

    uprintf("[SYS] TIM2 started\n");

    vTaskDelete(NULL);
}


