#include "tasks_common.h"
#include "uart_threadsafe.h"

void OLED_Task(void *arg)
{
    event_msg_t msg;

    uprintf("[OLED] Task started\n");

    while(1)
    {
        hb_oled = 1;

        if(xQueueReceive(q_oled, &msg, 100))
        {
            // Step-7: push to OLED display
            uprintf("[OLED] Update event id=%d\n", msg.id);
        }
    }
}


